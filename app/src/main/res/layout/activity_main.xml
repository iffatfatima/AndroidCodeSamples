<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/permissions_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permissions"/>

    <Button
        android:id="@+id/recycler_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycler Views"/>

    <Button
        android:id="@+id/map_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"/>
    <Button
        android:id="@+id/network_calls_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Calls"/>
    <Button
        android:id="@+id/hardware_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hardware Controls"/>
    <Button
        android:id="@+id/camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"/>
    <Button
        android:id="@+id/video_player_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Player"/>
</LinearLayout>
</FrameLayout>